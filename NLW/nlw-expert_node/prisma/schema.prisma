// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite" // Essa linha alterada de "postgresql" para "sqlite"
  url      = env("DATABASE_URL")
}

model Poll {
  id String @id @default(uuid())
  title String
  createAt DateTime @default(now())
  updateAt DateTime @default(now())

  options PollOption[]
  votes   Vote[]
}

// tenho um 1 Poll para N Options (onde tenho N coloco o comando para criar o relacionamento) - opção pertence a poll
model PollOption {
  id     String @id @default(uuid())
  title  String
  pollId String

  poll  Poll   @relation(fields: [pollId], references: [id])
  votes Vote[]
}

model Vote {
  id           Int      @id @default(autoincrement())
  sessionId    String
  pollId       String
  pollOptionId String
  createdAt    DateTime @default(now())

  pollOption PollOption @relation(fields: [pollOptionId], references: [id])
  poll       Poll       @relation(fields: [pollId], references: [id])
  @@unique([sessionId, pollId]) //garantido que a combinação dos dois campos é unica, só 1 voto por user (constraint)
}
